<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/downtown"
    tools:context="com.app.birudo.birudo.Corpus.FragmentStartGame">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="170px"
        android:id="@+id/imageBirudo"
        android:src="@drawable/birudorose"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/birudo" />

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/birudo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listes des Jeux"
        android:typeface="normal"
        android:textSize="26sp"
        android:textColor="@color/BirudoRose"
        android:id="@+id/birudoListGame"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="55dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Birudobrown"
        android:layout_marginTop="20px"
        android:layout_below="@+id/birudoListGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:fillViewport="true"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/Rlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/birudo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="250px"
                android:layout_height="300px"
                android:id="@+id/imageGame1"
                android:src="@drawable/playstore"
                android:layout_marginTop="-10px"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="La chasse au trésor"
                android:layout_marginLeft="@dimen/abc_action_bar_subtitle_text_size"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/BirudoRose"
                android:id="@+id/Game1Name"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageGame1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="L'idée de ce test est de mettre en avant un jeu type te lque la chasse au trésor. "
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/Black"
                android:id="@+id/Game1DescContent"
                android:layout_below="@+id/Game1Name"
                android:layout_alignLeft="@+id/Game1Name"
                android:layout_alignStart="@+id/Game1Name"
                android:layout_marginTop="20px"
                android:layout_above="@+id/Game1StartDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date de fin : 24/06/2014 "
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/Red"
                android:id="@+id/Game1StartDate"
                android:layout_below="@+id/imageGame1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Demarrer Jeu"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/BirudoGreen2"
                android:id="@+id/connection"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/Game1StartDate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20px" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/Birudobrown"
                android:layout_marginTop="20px"
                android:layout_below="@+id/connection"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="250px"
                android:layout_height="300px"
                android:id="@+id/imageGame2"
                android:src="@drawable/playstore"
                android:layout_marginTop="550px"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="La course du petit Lapin"
                android:layout_marginTop="39dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/Black"
                android:id="@+id/Game2Name"
                android:layout_alignTop="@+id/imageGame2"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="un petit jeu de piste pour trouver le petit Lapin"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/Black"
                android:id="@+id/Game2DescContent"
                android:layout_below="@+id/Game2Name"
                android:layout_alignLeft="@+id/Game2Name"
                android:layout_alignStart="@+id/Game2Name"
                android:layout_marginTop="39dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="25/06/2014 "
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/Red"
                android:id="@+id/Game2StartDate"
                android:layout_below="@+id/imageGame2"
                android:layout_toLeftOf="@+id/Game2Name" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Demarrer Jeu 2"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/BirudoGreen2"
                android:id="@+id/connection2"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/Game2DescContent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="9dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/Black"
                android:layout_marginTop="20px"
                android:layout_below="@+id/connection2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
