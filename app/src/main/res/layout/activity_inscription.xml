<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/downtown"
    tools:context="com.birudo.birudo.app.Inscription"
    android:weightSum="1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="170px"
        android:id="@+id/birudo"
        android:src="@drawable/birudonom"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-100px"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <!--<ImageView-->
    <!--android:layout_width="200px"-->
    <!--android:layout_height="150px"-->
    <!--android:id="@+id/imageView"-->
    <!--android:src="@drawable/playstoretransparent"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignParentTop="true" />-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Birudobrown"
        android:layout_marginTop="10px"
        android:layout_below="@+id/birudo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/birudo"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/Rlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/scrollView"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView">

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/pseudoLinear"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="* Pseudo :"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/BirudoRose"
                android:id="@+id/pseudo" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Pseudo afficher durant le jeu"
                android:textColorHint="@color/black"
                android:ems="10"
                android:id="@+id/pseudoText"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/pseudoLinear"
            android:layout_alignParentLeft="true"
            android:id="@+id/loginLinear"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="* login :"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/BirudoRose"
                android:id="@+id/login" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Login utiliser durant le jeu"
                android:textColorHint="@color/black"
                android:ems="10"
                android:id="@+id/loginText"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/loginLinear"
            android:layout_alignParentLeft="true"
            android:id="@+id/emailLinear"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="* Email :"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/BirudoRose"
                android:id="@+id/email" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="E-mail utiliser pour valider l'inscription"
                android:textColorHint="@color/black"
                android:ems="10"
                android:id="@+id/emailText"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/emailLinear"
            android:layout_alignParentLeft="true"
            android:id="@+id/PasswordLinear"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="* Mot de passe :"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/BirudoRose"
                android:id="@+id/password" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="votre mot de passe"
                android:textColorHint="@color/black"
                android:ems="10"
                android:id="@+id/passwordText"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/PasswordLinear"
            android:layout_alignParentLeft="true"
            android:id="@+id/confirmPasswordLinear"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="* Confirmer Mot de passe :"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/BirudoRose"
                android:id="@+id/confirmPassword" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="confirmer mot de passe"
                android:textColorHint="@color/black"
                android:ems="10"
                android:id="@+id/confirmPasswordText"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="60px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/confirmPasswordLinear"
                android:layout_alignParentLeft="true"
                android:id="@+id/validateLinear"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true">

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/Birudobrown"
                android:layout_marginTop="20px"
                android:layout_below="@+id/confirmPasswordText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="En vous inscrivant sur Birudo, vous reconnaissez avoir lu et accepté les conditions générales d'utilisation du service, ainsi que notre politique d'utilisation des données. Pour plus d'informations merci de vous rendre sur birudo.fr"
                android:id="@+id/disclamer"
                android:textStyle="normal"
                android:textSize="9sp"
                android:layout_marginTop="20px"
                android:textColor="@color/Black"
                android:background="@color/WhiteSmoke"
                android:layout_below="@+id/confirmPasswordLinear"
                android:layout_alignLeft="@+id/confirmPasswordText"
                android:layout_alignRight="@+id/confirmPasswordLinear"
                android:layout_alignEnd="@+id/confirmPasswordLinear" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valider Inscription"
                android:id="@+id/validate"
                android:layout_below="@+id/disclamer"
                android:layout_marginTop="20px"
                android:layout_alignRight="@+id/confirmPasswordLinear"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
       </RelativeLayout>
    </ScrollView>

</RelativeLayout>
