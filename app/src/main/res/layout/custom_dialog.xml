<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/translucent_black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:id="@+id/birudo"
        android:src="@drawable/birudorose"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-100px" />

    <!--<ImageView-->
        <!--android:layout_width="200px"-->
        <!--android:layout_height="150px"-->
        <!--android:id="@+id/imageView"-->
        <!--android:src="@drawable/playstoretransparent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentTop="true" />-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Birudobrown"
        android:layout_marginTop="20px"
        android:layout_below="@+id/birudo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/viewSeparator"/>

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_below="@+id/viewSeparator"
            android:layout_marginTop="20px"
            android:layout_height="500px"
            android:layout_width="fill_parent"
            android:fillViewport="true"
            android:background="@color/translucent_black"
            android:fadeScrollbars="false">

            <TextView
                android:text="toto is foo"
                android:id="@+id/TextView"
                android:textColor="@color/White"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </ScrollView>

        <Button
            android:id="@+id/Button"
            android:layout_below="@id/ScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/translucent_black"
            android:layout_marginTop="30px"
            android:layout_centerHorizontal="true"
            android:textColor="@color/BirudoRose"
            android:text="Close" />

</RelativeLayout>