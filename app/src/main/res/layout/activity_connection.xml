<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/downtown"
    tools:context="com.birudo.birudo.app.Main">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="170px"
        android:id="@+id/birudo"
        android:src="@drawable/birudonom"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-100px"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <!--<ImageView-->
        <!--android:layout_width="200px"-->
        <!--android:layout_height="150px"-->
        <!--android:id="@+id/imageView"-->
        <!--android:src="@drawable/playstoretransparent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentTop="true" />-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Birudobrown"
        android:layout_marginTop="10px"
        android:layout_below="@+id/birudo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/birudo"
        android:layout_alignParentLeft="true"
        android:id="@+id/ConnectionLinear"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="* Login :"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/BirudoRose"
            android:id="@+id/loginText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:id="@+id/login"
            android:inputType="text"
            android:hint="Login..."
            android:textColorHint="@color/black"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_below="@+id/login"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="* Mot de passe :"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/BirudoRose"
            android:layout_marginTop="17dp"
            android:id="@+id/passwordText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Your password..."
            android:textColorHint="@color/black"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_below="@+id/passwordText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/login"
            android:layout_alignEnd="@+id/login" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se Connecter"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/BirudoGreen2"
            android:id="@+id/connection"
            android:layout_marginTop="20px"
            android:layout_below="@+id/password"
            android:layout_alignLeft="@+id/birudo"
            android:layout_alignStart="@+id/birudo"
            android:layout_alignRight="@+id/birudo"
            android:layout_alignEnd="@+id/birudo"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:text="Mot de passe perdu ?"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/BirudoGreen2"
        android:id="@+id/lostPassword"
        android:layout_below="@+id/ConnectionLinear"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/disclamer"
        android:layout_alignEnd="@+id/disclamer" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En vous connectant/inscrivant sur BIRUDO, vous acceptez nos conditions et reconnaissez avoir lu et compris notre politique d'utilisation des donnÃ©es.Pour plus d'information rendez-vous sur birudo.fr"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:id="@+id/disclamer"
        android:layout_below="@+id/lostPassword"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:text="Pas encoe inscrit ?"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_below="@+id/disclamer"
        android:textColor="@color/BirudoGreen2"
        android:id="@+id/inscription"
        android:layout_marginTop="20px"
        android:layout_marginBottom="17px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
